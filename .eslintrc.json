{
    "extends": [
      "plugin:vue/vue3-recommended"
    ],
    "rules": {
        "indent": [ "error", 2 ],
        "vue/html-indent": ["error", 2, {
            "attribute": 1,
            "baseIndent": 1,
            "closeBracket": 0,
            "alignAttributesVertically": true,
            "ignores": []
        }],
        "quotes": ["error", "single"],
        "key-spacing": ["error", {
            "beforeColon": false
        }],
        "space-before-function-paren": ["error", "never"],
        "space-before-blocks":"error"
    }
}